<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="nativescript-qr-generator" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">

          <GridLayout rows="*,*,*" columns="*" class="qr-example">
              <Label row="0" col="0" text="Color and size" ></Label>
              <Image src="" row="1" col="0" loaded="{{onImageLoadedBasic}}"></Image>
              <Image width="100" height="100" src="~/assets/LOGO.png" width="300" row="2" col="0"></Image>
          </GridLayout>

        </ScrollView>
    </StackLayout>
</Page>
